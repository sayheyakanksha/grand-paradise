---
import { Image } from "astro:assets";
import Divider from "../bases/divider.astro";
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";
import { categoriesHandler } from "@/lib/handlers/categories";

type Props = {
  article: CollectionEntry<"articles">;
  index: number;
};

const { article, index } = Astro.props;

const { remarkPluginFrontmatter } = await render(article);
const category = categoriesHandler.oneCategory(article.data.category.id);
---

<article
  class="group relative isolate col-span-1 mx-auto flex h-full max-w-sm flex-col gap-2"
>
  <div class="relative aspect-video overflow-hidden rounded-md">
    <Image
      src={article.data.cover}
      alt={article.data.covert_alt
        ? article.data.covert_alt
        : article.data.title}
      loading={index < 3 ? "eager" : "lazy"}
      layout="constrained"
      class="h-full w-full object-cover"
    />
    <!-- <span class="absolute text-xs text-primary bottom-3 left-3 p-1 bg-white dark:text-secondary">
            {category.data.title}</span> -->
  </div>
  <div class="flex flex-1 flex-col">
    <h3
      class="line-clamp-2 font-sans text-xl font-semibold lg:group-hover:underline"
    >
      <a href={`/articles/${article.id}`}>
        <span class="pointer-events-none absolute inset-0 z-10"></span>
        {article.data.title}
      </a>
    </h3>
    <p
      class="text-base-content/80 line-clamp-3 pt-1 pb-2 text-sm text-pretty lg:mb-auto"
    >
      {article.data.description}
    </p>

    <!-- Hidden bar from news cards in the latest news section on the home page -->
    <!-- <div class="flex items-center text-xs text-base-content/80 mt-2">
      <span class="text-xs text-primary dark:text-secondary"
        >{category.data.title}</span
      >
      <Divider />
      <span class="text-xs text-base-content/80"
        >{remarkPluginFrontmatter.minutesRead}</span
      > -->
  </div>
</article>
